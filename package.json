{
  "name": "@platformatic/kafka",
  "version": "0.1.0",
  "description": "Modern and performant client for Apache Kafka",
  "homepage": "https://github.com/platformatic/kafka",
  "author": "Platformatic Inc. <oss@platformatic.dev> (https://platformatic.dev)",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/platformatic/kafka.git"
  },
  "keywords": [
    "kafka"
  ],
  "bugs": {
    "url": "https://github.com/platformatic/kafka/issues"
  },
  "private": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "type": "module",
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "swc --strip-leading-paths --delete-dir-on-start -d dist src && tsc -p . --emitDeclarationOnly",
    "lint": "eslint --cache",
    "test": "c8 -c test/config/c8-local.json node --env-file=test/config/env --no-warnings --test --test-reporter=dot 'test/**/*.test.ts'",
    "test:ci": "c8 -c test/config/c8-ci.json node --env-file=test/config/env --no-warnings --test-reporter=tap --test 'test/**/*.test.ts'",
    "ci": "npm run build && npm run test:ci",
    "prepublishOnly": "npm run ci",
    "postpublish": "git push origin && git push origin -f --tags",
    "generate:apis": "node --experimental-strip-types scripts/generate-apis.ts",
    "generate:errors": "node --experimental-strip-types scripts/generate-errors.ts",
    "create:api": "node --experimental-strip-types scripts/create-api.ts"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "bl": "^6.1.0",
    "fastq": "^1.19.1",
    "mnemonist": "^0.40.3",
    "semver": "^7.7.1"
  },
  "optionalDependencies": {
    "lz4-napi": "^2.8.0",
    "snappy": "^7.2.2"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "c8": "^10.1.3",
    "concurrently": "^9.1.2",
    "cronometro": "^4.0.3",
    "eslint": "^9.21.0",
    "json5": "^2.2.3",
    "kafkajs": "^2.2.4",
    "neostandard": "^0.12.1",
    "parse5": "^7.2.1",
    "prettier": "^3.5.3",
    "scule": "^1.3.0",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">= 22.14.0"
  }
}
